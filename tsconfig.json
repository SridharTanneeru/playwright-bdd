{ 
  "compilerOptions": { 
    "target": "ESNext", 
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true, 
    "module": "esnext", 
    "lib": ["es2017", "dom"], // Add necessary libraries 
    "strict": true, 
    "noEmit": true, 
    "useUnknownInCatchVariables": false, 
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node", 
    "resolveJsonModule": true, 
    "skipLibCheck": true, 
    "esModuleInterop": true, 
    "baseUrl": ".", 
    "paths": { 
      "@pages/*": ["pages/*"], 
      "@util/*": ["util/*"], 
      "@fixtures/*": ["fixtures/*"], 
      "@data/*": ["testdata/*"], 
      "@env/*": ["environmentSettings/*"] ,
      "@steps/*": ["steps/*"],
      "@steps/api/*": ["steps/api/*"],
      "@steps/ui/*": ["steps/ui/*"],
      "@steps/common/*": ["steps/common/*"]
    } 
  }, 
   "include": ["**/*.ts", "**/*.feature", "**/*.steps.ts", "utils/**/*.ts"], 
   "exclude": ["node_modules"] 
}
 